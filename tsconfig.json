{
    "compilerOptions": {
      "target": "ES6",                            // Define a versão do ECMAScript alvo
      "module": "commonjs",                       // Define o sistema de módulos
      "strict": true,                             // Habilita verificações estritas
      "esModuleInterop": true,                    // Habilita interoperabilidade com módulos ES
      "skipLibCheck": true,                       // Pula a checagem de tipos em arquivos de declaração
      "forceConsistentCasingInFileNames": true,   // Força o uso consistente de maiúsculas e minúsculas nos nomes de arquivos
      "outDir": "./dist",                         // Diretório de saída para os arquivos compilados
      "rootDir": "./src"                          // Diretório raiz dos arquivos de entrada
    },
    "include": ["src", "src/database/migrations"],// Inclui todos os arquivos TypeScript no diretório src
    "exclude": ["node_modules"]                   // Exclui o diretório node_modules
  }